source "https://rubygems.org"

gem "github-pages", group: :jekyll_plugins
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-feed"

# Windows timezone data for tzinfo (fixes DataSourceNotFound on Windows)
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]

# Ensure Jekyll CLI exists in the bundle when building via Actions
gem "jekyll", ">= 3.10", "< 4.0"



gem "webrick", "~> 1.9"
